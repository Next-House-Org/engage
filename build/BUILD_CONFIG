# BUILD_CONFIG V.6.0
# Docker build configuration for Engage monorepo

# Default Docker registry
DOCKER_REGISTRY="docker.nexthouse.org"

# Service configuration format: 
# "service_name|image-name|build-context|dockerfile-path|description"
SERVICES=(
  # Dashboard service
  "dashboard|dashboard|packages/dashboard|packages/dashboard/Dockerfile|Next.js frontend dashboard"
  
  # API service
  "api|api|packages/api|packages/api/Dockerfile|Backend API service"
  
  # Worker service
  "worker|worker|packages/worker|packages/worker/Dockerfile|Background job processor"
  
  # Lite service
  "lite|lite|packages/lite|packages/lite/Dockerfile|Lightweight version of the app"
  
  # Admin CLI
  "admin-cli|admin-cli|packages/admin-cli|packages/admin-cli/Dockerfile|Administrative command line tool"
)

# Default product name (used in image repository)
PRODUCT_NAME="engage"
